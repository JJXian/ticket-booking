{"ast":null,"code":"import Footer from \"@/components/Footer\";\nimport Comment from \"@/components/Comment\";\nexport default {\n  name: \"BlogDetail\",\n  components: {\n    Comment,\n    Footer\n  },\n  data() {\n    return {\n      blogId: this.$route.query.blogId,\n      blog: {},\n      tagsArr: [],\n      recommendList: [],\n      commentCount: 0,\n      commentContent: '',\n      commentList: []\n    };\n  },\n  created() {\n    this.load();\n    this.$request.put('/blog/updateReadCount/' + this.blogId);\n  },\n  methods: {\n    setLikes() {\n      this.$request.post('/likes/set', {\n        fid: this.blogId,\n        module: '博客'\n      }).then(res => {\n        if (res.code === '200') {\n          this.$message.success('操作成功');\n          this.load(); // 重新加载数据\n        }\n      });\n    },\n\n    setCollect() {\n      this.$request.post('/collect/set', {\n        fid: this.blogId,\n        module: '博客'\n      }).then(res => {\n        if (res.code === '200') {\n          this.$message.success('操作成功');\n          this.load(); // 重新加载数据\n        }\n      });\n    },\n\n    load() {\n      this.$request.get('/blog/selectById/' + this.blogId).then(res => {\n        this.blog = res.data || {};\n        this.tagsArr = JSON.parse(this.blog.tags || '[]');\n      });\n      this.$request.get('/blog/selectRecommend/' + this.blogId).then(res => {\n        this.recommendList = res.data || [];\n      });\n    }\n  }\n};","map":{"version":3,"names":["Footer","Comment","name","components","data","blogId","$route","query","blog","tagsArr","recommendList","commentCount","commentContent","commentList","created","load","$request","put","methods","setLikes","post","fid","module","then","res","code","$message","success","setCollect","get","JSON","parse","tags"],"sources":["src/views/front/BlogDetail.vue"],"sourcesContent":["<template>\r\n  <div class=\"main-content\">\r\n    <!--分成左右两个框框-->\r\n    <div style=\"display: flex; grid-gap: 10px\">\r\n<!--右边框框-->\r\n      <div style=\"flex: 1; width: 0\">\r\n        <div class=\"card\" styl e=\"padding: 30px; margin-bottom: 10px\">\r\n<!--          展示博客标题-->\r\n          <div style=\"font-weight: bold; font-size: 24px; margin-bottom: 20px\">{{ blog.title }}</div>\r\n<!--          用户 日期 浏览量-->\r\n          <div style=\"color: #666; margin-bottom: 20px\">\r\n            <span style=\"margin-right: 20px\"><i class=\"el-icon-user\"></i> {{ blog.userName }}</span>\r\n            <span style=\"margin-right: 20px\"><i class=\"el-icon-date\"></i> {{ blog.date }}</span>\r\n            <span style=\"margin-right: 20px\"><i class=\"el-icon-eye\"></i> {{ blog.readCount }}</span>\r\n            <span>\r\n              <el-tag v-for=\"item in tagsArr\" :key=\"item\" type=\"primary\" style=\"margin-right:5px\">{{ item }}</el-tag>\r\n            </span>\r\n          </div>\r\n<!--          博客正文-->\r\n          <div class=\"w-e-text\">\r\n            <div v-html=\"blog.content\"></div>\r\n          </div>\r\n\r\n        </div>\r\n\r\n        <!--     点赞和收藏数据   -->\r\n        <div class=\"card\" style=\"text-align: center; font-size: 20px; color: #666; margin-bottom: 10px\">\r\n          <span style=\"margin-right: 20px; cursor: pointer;\" @click=\"setLikes\" :class=\"{ 'active' : blog.userLike }\"><i class=\"el-icon-like\"></i> {{ blog.likesCount }}</span>\r\n          <span style=\" cursor: pointer\"  @click=\"setCollect\" :class=\"{ 'active' : blog.userCollect }\"><i class=\"el-icon-star-off\"></i> {{ blog.collectCount }}</span>\r\n        </div>\r\n\r\n<!--        评论-->\r\n        <Comment :fid=\"blogId\" module='博客' />\r\n        <!--  评论开始  -->\r\n        <div class=\"card\">\r\n          <h2 style=\"margin-bottom: 20px\">评论 {{ commentCount }}</h2>\r\n\r\n          <div style=\"margin-bottom: 20px\">\r\n            <el-input type=\"textarea\" placeholder=\"请输入评论内容\" v-model=\"commentContent\"></el-input>\r\n            <div style=\"text-align: right; margin-top: 5px\">\r\n              <el-button type=\"primary\" @click=\"addComment\">评 论</el-button>\r\n            </div>\r\n          </div>\r\n\r\n          <div>\r\n            <div style=\"display: flex; grid-gap: 20px; margin-bottom: 20px\" v-for=\"item in commentList\" :key=\"item.id\">\r\n              <img :src=\"item.avatar\" alt=\"\" style=\"width: 50px; height: 50px; border-radius: 50%\">\r\n              <div style=\"flex: 1\">\r\n                <!--                这是第一级评论-->\r\n                <div style=\"margin-bottom: 10px\">\r\n                  <div style=\"color: #666; margin-bottom: 10px\">{{ item.userName }}</div>\r\n                  <div style=\"color: #444; margin-bottom: 10px\">{{ item.content }}</div>\r\n                  <div style=\"color: #888; font-size: 13px\"><span style=\"margin-right: 20px\">{{ item.time }}</span>\r\n                    <span style=\"cursor: pointer\"><i class=\"el-icon-s-comment\"></i>评论</span>\r\n                  </div>\r\n                </div>\r\n                <!--                这是回复-->\r\n                <div style=\"display: flex;  grid-gap: 20px; margin-bottom: 20px\" v-for=\"sub in item.children\" :key=\"item.id\">\r\n                  <img :src=\"sub.avatar\" alt=\"\" style=\"width: 50px; height: 50px; border-radius: 50%\">\r\n                  <div style=\"flex: 1\">\r\n                    <div style=\"color: #666; margin-bottom: 10px\">{{ sub.userName }} <span style=\"color: #333\" v-if=\"sub.replyUser !== item.userName\">回复  {{ sub.replyUser }}</span></div>\r\n                    <div style=\"color: #444; margin-bottom: 10px\">{{ sub.content }}</div>\r\n                    <div style=\"color: #888; font-size: 13px\"><span style=\"margin-right: 20px\">{{ sub.time }}</span>\r\n                      <span style=\"cursor: pointer\"><i class=\"el-icon-s-comment\"></i>评论</span>\r\n                    </div>\r\n                  </div>\r\n                </div>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n        <!--  评论结束  -->\r\n      </div>\r\n\r\n<!--      右边框框-->\r\n      <div style=\"width: 260px\">\r\n        <div class=\"card\" style=\"margin-bottom: 10px\">\r\n<!--          用户信息-->\r\n          <div style=\"display: flex; align-items: center; grid-gap: 10px; margin-bottom: 10px\">\r\n            <img :src=\"blog.user?.avatar\" alt=\"\" style=\"width: 50px; height: 50px; border-radius: 50%\">\r\n            <div style=\"flex: 1;\">\r\n              <div style=\"font-weight: bold; margin-bottom: 5px\">{{ blog.user?.name }}</div>\r\n              <div style=\"color: #666; font-size: 13px\" class=\"line2\">{{ blog.user?.info }}</div>\r\n            </div>\r\n          </div>\r\n<!--          用户各种点赞数据-->\r\n          <div style=\"display: flex\">\r\n            <div style=\"flex: 1; text-align: center\">\r\n              <div style=\"margin-bottom: 5px\">文章</div>\r\n              <div style=\"color: #888\">{{ blog.user?.blogCount }}</div>\r\n            </div>\r\n            <div style=\"flex: 1; text-align: center\">\r\n              <div style=\"margin-bottom: 5px\">点赞</div>\r\n              <div style=\"color: #888\">{{ blog.user?.likesCount }}</div>\r\n            </div>\r\n            <div style=\"flex: 1; text-align: center\">\r\n              <div style=\"margin-bottom: 5px\">收藏</div>\r\n              <div style=\"color: #888\">{{ blog.user?.collectCount }}</div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n<!--       博客相关推荐-->\r\n        <div class=\"card\" style=\"margin-bottom: 10px\">\r\n          <div style=\"font-weight: bold; font-size: 20px; padding-bottom: 10px; border-bottom: 1px solid #ddd; margin-bottom: 10px\">相关推荐</div>\r\n          <div>\r\n            <div style=\"margin-bottom: 15px\" v-for=\"item in recommendList\" :key=\"item.id\">\r\n<!--              点击标题进行跳转-->\r\n              <a :href=\"'/front/blogDetail?blogId=' + item.id\" target=\"_blank\"><div class=\"recommend-title line2\">{{ item.title }}</div></a>\r\n<!--              该文章阅读和点赞数据-->\r\n              <div style=\"color: #888\">\r\n                <span>阅读</span> <span>{{ item.readCount }}</span>\r\n                <span style=\"margin-left: 10px\">点赞</span> <span>{{ item.likesCount }}</span>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n\r\n<!--        小框框标题-->\r\n        <div class=\"card\">\r\n          <div style=\"display: flex; grid-gap: 10px; \">\r\n            <div style=\"flex: 1; line-height: 25px\">\r\n              找对属于你的学习圈子\r\n              扫码学习精品项目\r\n            </div>\r\n            <img src=\"@/assets/imgs/广告.png\" alt=\"\" style=\"width: 50px; height: 50px; border-radius: 5px\">\r\n          </div>\r\n        </div>\r\n\r\n      </div>\r\n     </div>\r\n\r\n    <Footer />\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport Footer from \"@/components/Footer\";\r\nimport Comment from \"@/components/Comment\";\r\n\r\nexport default {\r\n  name: \"BlogDetail\",\r\n  components: {\r\n    Comment,\r\n    Footer\r\n  },\r\n  data() {\r\n    return {\r\n      blogId: this.$route.query.blogId,\r\n      blog: {},\r\n      tagsArr: [],\r\n      recommendList: [],\r\n      commentCount: 0,\r\n      commentContent: '',\r\n      commentList: []\r\n    }\r\n  },\r\n  created() {\r\n    this.load()\r\n\r\n    this.$request.put('/blog/updateReadCount/' + this.blogId)\r\n  },\r\n  methods: {\r\n\r\n    setLikes() {\r\n      this.$request.post('/likes/set', {  fid: this.blogId, module: '博客' }).then(res => {\r\n        if (res.code === '200') {\r\n          this.$message.success('操作成功')\r\n\r\n          this.load()  // 重新加载数据\r\n        }\r\n      })\r\n    },\r\n    setCollect() {\r\n      this.$request.post('/collect/set', {  fid: this.blogId, module: '博客' }).then(res => {\r\n        if (res.code === '200') {\r\n          this.$message.success('操作成功')\r\n\r\n          this.load()  // 重新加载数据\r\n        }\r\n      })\r\n    },\r\n    load() {\r\n      this.$request.get('/blog/selectById/' + this.blogId).then(res => {\r\n        this.blog = res.data || {}\r\n\r\n        this.tagsArr = JSON.parse(this.blog.tags || '[]')\r\n      })\r\n\r\n      this.$request.get('/blog/selectRecommend/' + this.blogId).then(res => {\r\n        this.recommendList = res.data || []\r\n      })\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style>\r\n/* blockquote 样式 */\r\nblockquote {\r\n  display: block;\r\n  border-left: 8px solid #d0e5f2;\r\n  padding: 20px 10px;\r\n  margin: 10px 0;\r\n  line-height: 1.4;\r\n  font-size: 100%;\r\n  background-color: #f1f1f1;\r\n}\r\n\r\n/* code 样式 */\r\ncode {\r\n  display: inline-block;\r\n  *display: inline;\r\n  *zoom: 1;\r\n  background-color: #f1f1f1;\r\n  border-radius: 3px;\r\n  padding: 3px 5px;\r\n  margin: 0 3px;\r\n}\r\npre code {\r\n  display: block;\r\n}\r\np {\r\n  line-height: 30px\r\n}\r\n\r\n.active {\r\n  color: orange !important;\r\n}\r\n.recommend-title {\r\n  margin-bottom: 5px;\r\n}\r\n.recommend-title:hover {\r\n  color: #2a60c9;\r\n}\r\n.comment-active {\r\n  color: #2a60c9;\r\n}\r\npre {\r\n  white-space: pre-wrap; /*css-3*/\r\n  white-space: -moz-pre-wrap; /*Mozilla,since1999*/\r\n  white-space: pre-wrap; /*Opera4-6*/\r\n  white-space: -o-pre-wrap; /*Opera7*/\r\n  word-wrap: break-word; /*InternetExplorer5.5+*/\r\n}\r\n</style>"],"mappings":"AAwIA,OAAAA,MAAA;AACA,OAAAC,OAAA;AAEA;EACAC,IAAA;EACAC,UAAA;IACAF,OAAA;IACAD;EACA;EACAI,KAAA;IACA;MACAC,MAAA,OAAAC,MAAA,CAAAC,KAAA,CAAAF,MAAA;MACAG,IAAA;MACAC,OAAA;MACAC,aAAA;MACAC,YAAA;MACAC,cAAA;MACAC,WAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,IAAA;IAEA,KAAAC,QAAA,CAAAC,GAAA,iCAAAZ,MAAA;EACA;EACAa,OAAA;IAEAC,SAAA;MACA,KAAAH,QAAA,CAAAI,IAAA;QAAAC,GAAA,OAAAhB,MAAA;QAAAiB,MAAA;MAAA,GAAAC,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA,KAAAC,QAAA,CAAAC,OAAA;UAEA,KAAAZ,IAAA;QACA;MACA;IACA;;IACAa,WAAA;MACA,KAAAZ,QAAA,CAAAI,IAAA;QAAAC,GAAA,OAAAhB,MAAA;QAAAiB,MAAA;MAAA,GAAAC,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA,KAAAC,QAAA,CAAAC,OAAA;UAEA,KAAAZ,IAAA;QACA;MACA;IACA;;IACAA,KAAA;MACA,KAAAC,QAAA,CAAAa,GAAA,4BAAAxB,MAAA,EAAAkB,IAAA,CAAAC,GAAA;QACA,KAAAhB,IAAA,GAAAgB,GAAA,CAAApB,IAAA;QAEA,KAAAK,OAAA,GAAAqB,IAAA,CAAAC,KAAA,MAAAvB,IAAA,CAAAwB,IAAA;MACA;MAEA,KAAAhB,QAAA,CAAAa,GAAA,iCAAAxB,MAAA,EAAAkB,IAAA,CAAAC,GAAA;QACA,KAAAd,aAAA,GAAAc,GAAA,CAAApB,IAAA;MACA;IACA;EACA;AACA"},"metadata":{},"sourceType":"module","externalDependencies":[]}